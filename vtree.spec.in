%define ver @VERSION@
%define rel 1
%define prefix /usr

Prefix: %{prefix}

Summary: Display directory hierarchy using ASCII graphics
Name: vtree
Version: %{ver}
Release: %{rel}
Source: http://ftp.megacoder.com/vtree/%{name}-%{ver}.tar.gz
License: GPLv2
URL: http://www.megacoder.com/
Group: Applications/System
Buildroot: %{_tmppath}/%{name}-root

%description
I wrote vtree(1) long before tree(1) was in any distro.

%prep

%setup -q
%build
	CFLAGS="$RPM_OPT_FLAGS" ./configure --prefix=%{prefix}
	make

%install
	rm -rf ${RPM_BUILD_ROOT}
	make prefix=${RPM_BUILD_ROOT}%{prefix} install

%clean
	rm -rf ${RPM_BUILD_ROOT}

%files
%defattr(-,root,root)
%doc AUTHORS COPYING README INSTALL NEWS LICENSE TODO
%{_bindir}/%{name}

